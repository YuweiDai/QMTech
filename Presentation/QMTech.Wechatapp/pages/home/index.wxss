.swiper-item{
    display: block;
    height: 150px;
    background-size: 100%;
    background-repeat: no-repeat;
    background-position: top;
}

.menueview{
  display:flex;
  background-color:#FFF;
  padding:5px 0;
}
.menue-image{
  flex:1;
  height:70px;
  height:auto;
}

.top_line_container
{
	display: flex;
	border-top: #ddd solid 1px;
	border-bottom: #ddd solid 1px;
	background:white;
	height:30px;
	width:100%;
	overflow:hidden
	padding:5px 10px;	
}

.top_line_img{
    width: 80px;
    height: 30px;
}
.top_line_swipers {
	width:100%;
	height:30px;
}

.top_line_swipers swiper{
	width:100%;
	height:100%;
}

.top_line_swiper text
{
	line-height:30px;
	font-size:16px;
	overflow:hidden;
}

.activity
{
	display:flex;
	height:200px;
	overflow:hidden;
}

.activity .left
{
width:33.3%;height:200px;
}

.activity .right
{
width:66.7%;height:200px;
}

.activity .right .top,
.activity .right .bottom
{
    display: flex;
	height:99.5px;
}

.activity__item
{
width:50%;height:100%;flex: auto;
}

.activity__img
{
	height:100%;
	width:100%;
}

.nice_shops_products
{
	height:40px;
}

.menu
{
	flex:1;
	font-size:16px;
	height:30px;
	line-height:30px;
	margin-top:7px;
}

.menu.active
{
	color:#7266ba;
	font-weight:bold;
	border-bottom: #8278c2 4px solid;
}

.nice_item
{
	display:flex;
}

.nice_item_img
{
	flex:1;
	width:100%;
	height:76px;
}

.nice_item_img image
{
	width:100%;
	height:100%;
}

.nice_item_info
{
	flex:3;
}

.nice_item_info_title
{
	font-size:18px;
	font-weight:500;
}
.nice_item_info_item
{
	font-size:12px;
}